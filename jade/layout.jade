block variables

doctype
//if lt IE 7
  <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en">
//if IE 7
  <html class="no-js lt-ie9 lt-ie8" lang="en">
//if IE 8
  <html class="no-js lt-ie9" lang="en">
//[if gt IE 8]><!
html(class='no-js', lang='en')
  //<![endif]

  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    link(rel='shortcut icon', href='/favicon.ico', type='image/x-icon')

    meta(name='viewport', content='width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no')

    if active === 'home'
      title RESA
    else
      title #{title} - RESA

    //- Meta Description
    meta(name='description', content=(meta_desc ? meta_desc : 'RESA at Tyber Place offers 326 luxury apartments and 7,350 SF of restaurants and retail. Residential amenities include a state-of-the-art fitness center, open-air courtyard, sparkling rooftop pool and party deck.'))
    
    //- Open Graph
    meta(property='og:site_name', content='RESA')
    meta(property='og:title', content=('undefined' !== typeof title ? title : 'RESA'))
    meta(property='og:url', content='http://resanoma.com#{(slug ? "/"+slug : "")}')
    meta(property='og:type', content='Website')
    meta(property='og:image', content='http://resanoma.com'+(fb_share ? '/assets/img/#{fb_share}' : '/assets/img/RESA-share.png'))
    meta(property='og:image:type', content='image/png')
    meta(property='og:image:width', content='1200')
    meta(property='og:image:height', content='630')
    meta(property='og:description', content=(fb_desc ? fb_desc : 'RESA at Tyber Place offers 326 luxury apartments and 7,350 SF of restaurants and retail. Residential amenities include a state-of-the-art fitness center, open-air courtyard, sparkling rooftop pool and party deck.'))

    meta(itemprop='name', content='RESA')
    meta(itemprop='url', content='http://resanoma.com#{(slug ? "/"+slug : "")}')
    meta(itemprop='description', content=(meta_desc ? meta_desc : 'RESA at Tyber Place offers 326 luxury apartments and 7,350 SF of restaurants and retail. Residential amenities include a state-of-the-art fitness center, open-air courtyard, sparkling rooftop pool and party deck.'))

    //- Twitter Card
    meta(name='twitter:card', content='summary_large_image')
    meta(name='twitter:site', content='@skanskausa')
    meta(name='twitter:creator', content='@skanskausa')
    meta(name='twitter:title', content=('undefined' !== typeof title ? title : 'RESA'))
    meta(name='twitter:description', content=(tw_desc ? tw_desc : 'RESA at Tyber Place offers 326 luxury apartments and 7,350 SF of restaurants and retail. Residential amenities include a state-of-the-art fitness center, open-air courtyard, sparkling rooftop pool and party deck.'))
    meta(name='twitter:image', content='http://resanoma.com'+(tw_share ? '/assets/img/#{tw_share}' : '/assets/img/RESA-share.png'))

    //- Mobile App Settings
    link(rel='apple-touch-icon', sizes='152x152', href='/assets/img/apple-touch-icon-152x152-precomposed.png')
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-status-bar-style', content='black')
    meta(name='apple-mobile-web-app-title', content='RESA')
    
    link(href='/assets/css/app.css', rel='stylesheet')

    script(src='/assets/js/vendor/modernizr-3.3.1.min.js')

    script(src='/assets/js/vendor/svgxuse.min.js')

  body(class=active)
    include partials/header
    
    block body
    
    include partials/footer
    
    script(src='//ajax.googleapis.com/ajax/libs/jquery/2.2.3/jquery.min.js')
    script.
      window.jQuery || document.write('<script src="/assets/js/vendor/jquery-2.2.3.min.js"><\\/script>')
    script(src='/assets/js/plugins.min.js')
    script(src='/assets/js/main.js')
      
    block scripts